{
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"extends": ["airbnb/base"],
	"rules": {
		"no-console": "warn",
		"no-plusplus": "off",
		"eol-last": "off",
		"max-len": ["error", 150, { "ignoreUrls": true }],
		"no-tabs": "off",
		"no-alert": "off",
		"prefer-destructuring": "off",
		"indent": [2, "tab"],
		"no-param-reassign": "off",
		"no-unused-vars": "warn",
		"import/extensions": ["error", "always", { "ignoreImport": true }],
		"no-mixed-spaces-and-tabs": ["error", "smart-tabs"],
		"no-useless-escape": "error"
	}
}
